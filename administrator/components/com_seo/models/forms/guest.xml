<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
                name="id"
                type="text"
                label="COM_HOTEL_GUEST_FIELD_ID_LABEL"
                description="COM_HOTEL_GUEST_FIELD_ID_DESC"
                filter="INTEGER"
                class="readonly"
                readonly="true"
        />
        <field name="name" label="COM_HOTEL_GUEST_FIELD_NAME_LABEL" description="COM_HOTEL_GUEST_FIELD_NAME_DESC"
               type="text"
               class="inputbox"
               required="true"
        />

        <field
			name="vip"
			type="radio"
			label="COM_HOTEL_GUEST_FIELD_VIP_LABEL"
			description="COM_HOTEL_GUEST_FIELD_VIP_DESC"
			default="0"
			class="btn-group btn-group-yesno"
			>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

        <field name="published" type="list" label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC" class="custom-select-color-state"
               filter="intval" size="1" default="1"
        >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>
            <option value="2">
                JARCHIVED</option>
            <option value="-2">
                JTRASHED</option>
        </field>

    </fieldset>

</form>